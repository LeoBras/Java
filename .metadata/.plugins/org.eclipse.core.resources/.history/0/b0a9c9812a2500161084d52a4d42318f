import static org.junit.Assert.*;

import org.junit.Test;

public class TestePaciente {

	@Test
	public void testIMC() {
		Paciente	pedro = 	new Paciente(100, 1.40),
					andre = 	new Paciente(100, 1.50),
					tome =  	new Paciente(100, 1.60),
					filipe = 	new Paciente(100, 1.70),
					matheus = 	new Paciente(100, 1.80),
					bart = 		new Paciente(100, 1.90),
					tiago = 	new Paciente(100, 2.00),
					simao = 	new Paciente(100, 2.10),
					judas = 	new Paciente(100, 2.20);
					
		assertEquals(pedro.calcularIMC(), 51, 0.5);
		assertEquals(andre.calcularIMC(), 44, 0.5);
		assertEquals(tome.calcularIMC(), 39, 0.5);
		assertEquals(filipe.calcularIMC(), 35, 0.5);
		assertEquals(matheus.calcularIMC(), 31, 0.5);
		assertEquals(bart.calcularIMC(), 28, 0.5);
		assertEquals(simao.calcularIMC(), 23, 0.5);
		assertEquals(judas.calcularIMC(), 51, 0.5);
		
	}

}
