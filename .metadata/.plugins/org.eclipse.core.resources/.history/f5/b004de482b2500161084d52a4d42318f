import static org.junit.Assert.*;

import org.junit.Test;

public class TestePaciente {

	@Test
	public void testIMC() {
		Paciente	pedro = 	new Paciente(80, 1.40),
					andre = 	new Paciente(80, 1.50),
					tome =  	new Paciente(80, 1.60),
					filipe = 	new Paciente(80, 1.70),
					matheus = 	new Paciente(80, 1.80),
					bart = 		new Paciente(80, 1.90),
					tiago = 	new Paciente(80, 2.00),
					simao = 	new Paciente(80, 2.10),
					judas = 	new Paciente(80, 2.20);
					
		assertEquals(pedro.calcularIMC(), 41, 0.5);
		assertEquals(andre.calcularIMC(), 36, 0.5);
		assertEquals(tome.calcularIMC(), 31, 0.5);
		assertEquals(filipe.calcularIMC(), 28, 0.5);
		assertEquals(matheus.calcularIMC(), 25, 0.5);
		assertEquals(bart.calcularIMC(), 22, 0.5);
		assertEquals(tiago.calcularIMC(), 20, 0.5);
		assertEquals(simao.calcularIMC(), 18, 0.5);
		assertEquals(judas.calcularIMC(), 21, 0.5);
		
	}

}
